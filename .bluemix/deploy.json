{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "le title",
    "description": "le description",
    "longDescription": "A longer description",
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The bluemix region",
            "type": "string",
            "validator": {
                "v-type": "cf-region",
                "params": ["api-key"]
            }
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string",
            "validator": {
                "v-type": "cf-org",
                "params": ["prod-region"]
            }
        },
        "prod-space": {
            "description": "The bluemix space. Must have an odd number of characters in its name ;)",
            "type": "string",
            "pattern": "^.(?:..)*$",
            "validator": {
                "v-type": "cf-space",
                "params": ["prod-organization"]
            }
        },
        "api-key": {
            "description": "API key description",
            "type": "string",
            "validator": {
                "v-type": "api-key"
            }
        },
        "prod-app-name": {
            "description": "App name, must have odd # of characters",
            "type": "string",
            "pattern": "^.(?:..)*$"
        }
    },
    "required": [
        "api-key",
        "prod-region",
        "prod-organization",
        "prod-space",
        "prod-app-name"
    ],
    "form": [{
            "type": "validator",
            "url": "/devops/validator/validator-v1.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "App name",
            "key": "prod-app-name"
        },
        {
            "type": "password",
            "readonly": false,
            "title": "IBM Cloud API Key",
            "key": "api-key"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [{
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Region"
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "label",
                    "title": "Stage"
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        }
    ]
}